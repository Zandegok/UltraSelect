<!-- File: Views/BaseAppWindow.xaml -->
<Window x:Class="UltimateSelect.Views.BaseAppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Base App Window"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize"
        MinWidth="300" MinHeight="200">
    <Border BorderBrush="White" BorderThickness="1" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!-- Custom Title Bar -->
            <Grid x:Name="TitleBar" Background="DarkGray" Grid.Row="0">
                <TextBlock x:Name="WindowTitle" Text="{Binding Title, RelativeSource={RelativeSource TemplatedParent}}" VerticalAlignment="Center" Margin="10,0"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="PinButton" Content="📌" Width="30" Height="30" Visibility="Visible"/>
                    <Button x:Name="MinimizeButton" Content="―" Width="30" Height="30" Visibility="Visible"/>
                    <Button x:Name="MaximizeButton" Content="☐" Width="30" Height="30" Visibility="Visible"/>
                    <Button x:Name="CloseButton" Content="X" Width="30" Height="30" Visibility="Visible"/>
                </StackPanel>
            </Grid>
            <!-- Content Area -->
            <ContentPresenter x:Name="WindowContent" Grid.Row="1"/>
        </Grid>
    </Border>
</Window>
